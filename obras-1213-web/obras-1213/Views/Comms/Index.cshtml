@using obras_1213.Models
@using obras_1213.Models.View
@model CommsViewModel
@{
    ViewBag.Title = "Comunicados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <script src="@Url.Content("~/Scripts/Views/comms-index.js")" type="text/javascript"></script>
}

<h2>Comunicados</h2>

<div class="container">
    <div>
        <h3>Obtenção de comunicados</h3>
        <a class="btn" href="@Url.Action("Download")">Obter comunicados</a>
        <br/><br/>
        <a href="@Url.Content("~/Content/xml/comunicados.xsd")" class="btn">Obter XML Schema</a>
        <br/>
    </div>
    <div>
        <h3>Inserção de um comunicado</h3>
        <form action="@Url.Action("Add")" method="post" enctype="multipart/form-data">
            @Html.DropDownList("shopId", Model.ShopsToSelect)
            <br />
            @Html.DropDownList("departmentId", Model.DepartmentsToSelect)
            <br />
            Ficheiro XML: <input style="display:inline;vertical-align:top;" type="file" class="input-block-level" name="CommFile">
            <br />
            <button class="btn btn-success" style="vertical-align:top;"><i class="icon-plus-sign"></i>Adicionar</button>
        </form>
    </div>
    <div>
        <h3>Listagem de comunicados</h3>
        <form action="@Url.Action("List")" class="form-inline" method="post">
            <label for="date">Data de publicação: </label>
            <input type="text" class="date" name="date" />
            <button type="submit" class="btn">Listar</button>
        </form>
    </div>
</div>
